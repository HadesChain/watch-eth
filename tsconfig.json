{
  "compilerOptions": {
    "target": "es5",
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "src/types/*",
        "test/types/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
