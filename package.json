{
  "name": "watch-eth",
  "version": "0.0.1-beta.6",
  "description": "Robust library for listening to Ethereum events",
  "main": "build/index.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "test": "npm run test.unit && npm run test.integration",
    "test.unit": "mocha --require ts-node/register 'test/unit/**/*.ts'",
    "test.integration": "mocha --timeout 20000 --require ts-node/register 'test/integration/**/*.ts'",
    "lint": "prettier --check '{src,test}/**/*.{ts,json}' 'index.ts'",
    "fix": "prettier --write '{src,test}/**/*.{ts,json}' 'index.ts'",
    "compile": "tsc -p ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run compile && npm run test && lint-staged && git add build/"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "ethereum",
    "events"
  ],
  "author": "Plasma Group",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^11.10.0",
    "ts-node": "^8.0.2",
    "web3": "^1.0.0-beta.47"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/web3": "^1.0.18",
    "chai": "^4.2.0",
    "ganache-cli": "^6.4.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "prettier": "^1.16.4",
    "ts-mockito": "^2.3.1",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3333"
  }
}
